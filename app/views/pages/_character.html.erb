<tr>
  <td class="rank"><%= character_counter + 1 %></td>
  <td class="name"><span class="class<%= character.class_id %>" data-darktip="character:<%= character.region %>.<%= blizzardize character.realm %>.<%= character.name.downcase %>(en)"><%= link_to character.name, "http://#{character.region}.battle.net/wow/en/character/#{blizzardize character.realm}/#{character.name.downcase}/" %></span></td>
  <td class="realm"><%= link_to "#{character.region.upcase}-#{character.realm}", characters_path(character.region, character.realm) %></td>
  <td class="points"><%= character.achievement_points %></td>
</tr>
